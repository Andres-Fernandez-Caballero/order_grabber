@model WebApp.ServiceModeloNegocio.Order


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Order</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    
    <div class="form-group">
        <label for="CustomerID" class="control-label col-md-2">Cliente</label>
            <div class="col-md-10">
                <select class="form-control" name="customeriD">
                    @foreach (var customer in ViewBag.CustomersList)
                     {
                        <option value="@customer.CustomerID">@customer.Customer_name</option>
                     }
                </select>
            </div>
    </div>
    
    
    
    <div class="form-group">
        <label for="Products" class="control-label col-md-2">Productos disponibles</label>
        <div class="col-md-10">
            <select class="form-control" name="product_list"> 
                @foreach (var producto in ViewBag.ProductosDisponibles)
                {
                    <option value="@producto.ProductID">@producto.Product_name</option>
                }

            </select>
        </div>
    </div>

   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
