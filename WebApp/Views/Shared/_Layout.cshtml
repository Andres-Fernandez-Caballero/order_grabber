<!DOCTYPE html>
<html lang="es">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="image/x-icon" rel="icon" href="favicon.ico" />
    <title lang="en">Order Grabber</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar bg-order-grabber navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Resources/Logo.png" alt="la fachada de un comercio color celeste" class="navbar-brand" />
                @Html.ActionLink("Order Grabber", "Index", "Home", new { area = "" }, new { @class = "navbar-brand text-alert" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Customer")</li>
                    <li>@Html.ActionLink("Productos", "Index", "Product")</li>
                    <li>@Html.ActionLink("Ordenes", "Index", "Order")</li>
                    <li>@Html.ActionLink("Acerca de", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p lang="en">&copy; @DateTime.Now.Year - <strong>Order Grabber</strong> - Andres Pablo Fernandez caballero</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
