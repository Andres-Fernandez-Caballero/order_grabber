@model IEnumerable<WebApp.ServiceModeloNegocio.Customer>

<p>
    @Html.ActionLink("Agregar", "Create", null, new { @class = "btn btn-lg btn-default" })
</p>
<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Address)</th>
        <th>@Html.DisplayNameFor(model => model.Customer_name)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
        <th>@Html.DisplayNameFor(model => model.Estado)</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Address)</td>
        <td>@Html.DisplayFor(modelItem => item.Customer_name)</td>
        <td>@Html.DisplayFor(modelItem => item.Email)</td>
        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
        <!-- opciones -->
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CustomerID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CustomerID }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.CustomerID })
        </td>
    </tr>
}
</table>
